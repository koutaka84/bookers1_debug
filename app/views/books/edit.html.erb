<div class="container">

	<% if @book.errors.any? %>
	<%= @book.errors.count %>件のerrorが発生しました
	<% @book.errors.full_messages.each do |message| %>
	<%= message %>
	<% end %>
	<% end %>

<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
<h4> Title</h4>
<%= f.text_field :title %>

<h4> Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<%= link_to 'Show', book_path %>
<%= link_to 'Back', books_path %>
<% end %>
